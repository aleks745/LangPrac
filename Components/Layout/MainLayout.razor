@inherits LayoutComponentBase
@inject NavigationManager NavigationManager

<div class="page">
    <header>
        @if (!IsLoginOrRegisterPage(NavigationManager.Uri))
        {
            <NavMenu />
        }
    </header>
    <main class="content">
        <div class="container">
            @Body
        </div>
    </main>
</div>
<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    private bool IsLoginOrRegisterPage(string uri)
    {
        return uri.Contains("/Account/Login") || uri.Contains("/Account/Register");
    }
}
